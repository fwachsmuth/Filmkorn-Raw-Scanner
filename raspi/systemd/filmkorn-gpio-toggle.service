[Unit]
Description=Filmkorn GPIO Sleep/Wake Toggle
After=multi-user.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/Filmkorn-Raw-Scanner/raspi
ExecStart=/usr/bin/python3 -u /home/pi/Filmkorn-Raw-Scanner/raspi/filmkorn-gpio-toggle.py
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
