[Unit]
Description=lsyncd (Filmkorn Scanner)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/Filmkorn-Raw-Scanner/raspi
ExecStart=/usr/bin/lsyncd -nodaemon -log all /home/pi/Filmkorn-Raw-Scanner/raspi/lsyncd.active.conf
Restart=on-failure
RestartSec=1
Nice=5

# optional, aber praktisch
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target